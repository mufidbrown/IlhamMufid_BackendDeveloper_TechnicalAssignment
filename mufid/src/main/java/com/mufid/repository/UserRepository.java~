package com.mufid.repository;

import com.mufid.entity.bean.User;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;

import java.util.Optional;

@Repository
public interface UserRepository extends JpaRepository<User, Integer> {
    User findByEmail(String email);

    @Query("SELECT u FROM User u WHERE u.fullName = :fullname AND u.isActive = true AND u.isDeleted = false")
    Optional<User> findActiveByUsername(@Param("fullname") String fullname);

    @Query("SELECT u FROM User u WHERE u.email = :email AND u.isActive = true AND u.isDeleted = false")
    Optional<User> findActiveByEmail(@Param("email") String email);

    @Query("SELECT u FROM User u WHERE u.id = :id AND u.isActive = true AND u.isDeleted = false")
    Optional<User> findActiveById(@Param("id") Integer id);

    boolean existsByFullNameAndIsDeletedFalse(String fullName);

    boolean existsByEmailAndIsDeletedFalse(String email);
}
